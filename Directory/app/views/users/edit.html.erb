<h4>Edit User</h4>


<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
<%= bootstrap_form_for @user, html: { multipart: true }  do |f| %>
  <div>
  <%= f.text_field :name, label: "Name", skip_required: true %>
  </div>
  <div>
    <%= f.text_field :occupation, label: "Occupation" %>
  </div>
  <div id="upload_preview"> <%= link_to image_tag(@user.photo.url(:med)), @user.photo.url %> </div>
  <div>
    <%= f.file_field :photo, label: "Photo"%>
  </div>
  <%= f.submit  class: "btn btn-info btn-block"%>
  <%= link_to "View All Users", "/users" , {:class=>"btn btn-warning btn-block"} %>
  <% end %>
</div>
</div>
</div>
