<%= include_gon %>


<% @result.each do |location| %>
  <div class="list-header"> <%= location["address"].upcase %> </div>
    <ul class="list">
        <%  location["weather"].each do |day| %>
        <li class="item"> <div class="block"> <p class="time"> <%= Time.at(day.time).strftime('%A') %> </p>
              <p class="summary"> <%= day.summary %> </p>
              <%= image_tag("#{@pic[day.summary]}") %>
              High: <%= day.apparentTemperatureMax %> | Low: <%= day.apparentTemperatureMin %> </div>
        </li>
        <% end %>
    </ul>
<% end %>


