

<div class="container text-center">
  <h2>More details</h2>

  <table class="table">
    </thead>
    <tbody>
      <tr class="success">
        <td>Branch</td>
        <td><%= @branch.branch %> </td>
      </tr>
      <tr class="success">
        <td>Street</td>
        <td><%= @branch.street %> </td>
      </tr>
      <tr class="success">
        <td>City</td>
        <td><%= @branch.city %> </td>
      </tr>
      <tr class="success">
        <td>State</td>
        <td><%= @branch.state %> </td>
      </tr>
    </tbody>
  </table>

  <h2>Student details</h2>
  <table class="table">
    </thead>
    <tbody>
      <% @branch.students.each do |student| %>
            <tr class="success">
              <td><%= student.first_name %></td>
              <td><%= student.last_name %> </td>
              <td><%= student.email %></td>
              <td> <%= link_to "Show",branch_student_path(@branch,student) %>
                  <%= link_to "Edit", edit_branch_student_path(@branch,student) %>
                  <%= link_to "Delete", branch_student_path(@branch,student), method: :post, data: {confirm: 'Are you sure?'} %>
              </td>
            </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to "Add new Student", new_branch_student_path(@branch) %>
<hr>
<%= link_to "Home", root_path %>


</div>
