<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<div class="container">
  <h2> Locations </h2>
  <table class="table">
    <thead>
      <tr class="danger">
        <th>Branch</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @branch.each do |x| %>
        <tr class="success">
          <td> <%= x.branch %> </td>
          <td> <%= x.street %> </td>
          <td> <%= x.city %> </td>
          <td> <%= x.state %> </td>
          <td>  <%= link_to 'Show', x %>
                <%= link_to 'Edit', edit_branch_path(x)  %>
                <%= link_to 'Delete', x, method: :delete, data: {confirm: 'Are you sure?'} %>
             <td></td>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <button class="btn-block" > <%= link_to 'New', new_branch_path  %> </button>

</div>
