<h1>Students#edit</h1>
<p>Find me in app/views/students/edit.html.erb</p>

<div class="container">

<form method="post" action="/branches/<%= @branch.id %>/students/<%= @student.id %>">
        <input type="hidden" name="_method" value="patch">

        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group row">
        <label for="example-text-input" class="col-2 col-form-label">first Name</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @student.first_name %>" name="student[first_name]" id="example-text-input">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-search-input" class="col-2 col-form-label">Last Nae</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @student.last_name %>" name="student[last_name]" id="example-search-input">
        </div>
      </div>
      <div class="form-group row">
        <label for="example-email-input" class="col-2 col-form-label">email</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @student.email %>" name="student[email]" id="example-email-input">
        </div>
      </div>

          <input  type="hidden" value="<%= @branch.id %>" name="student[branch_id]" id="example-url-input">


      <button class="btn btn-block btn-primary"> Submit </button>

</form>

<button class="btn-block" > <%= link_to "Home Page" , root_path  %> </button>


</div>
